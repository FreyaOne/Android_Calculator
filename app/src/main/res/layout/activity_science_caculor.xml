<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="0dp"
    tools:context=".scienceCaculor">


    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="372dp"
        android:layout_height="336dp"
        android:layout_gravity="bottom|center"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="7"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/btDian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            app:layout_column="0"
            app:layout_row="8" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="4"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="1"
            app:layout_column="0"
            app:layout_row="7" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="3"
            app:layout_column="2"
            app:layout_row="7" />

        <Button
            android:id="@+id/btEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            app:layout_column="2"
            app:layout_row="8" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_column="1"
            app:layout_row="8" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="2"
            app:layout_column="1"
            app:layout_row="7" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="5"
            app:layout_column="1"
            app:layout_row="6" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="8"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="6"
            app:layout_column="2"
            app:layout_row="6" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:text="9"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/btMultiply"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="×"
            app:layout_column="3"
            app:layout_row="6" />

        <Button
            android:id="@+id/btMinus"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="-"
            app:layout_column="3"
            app:layout_row="7" />

        <Button
            android:id="@+id/btPlus"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="+"
            app:layout_column="3"
            app:layout_row="8" />

        <Button
            android:id="@+id/btSquare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btClear"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="清除"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/btDivide"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="÷"
            app:layout_column="3"

            app:layout_row="5" />

        <Button
            android:id="@+id/btPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sin"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cos"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tan"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="log"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x³"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ln"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="√"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button8"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="∏"
            app:layout_column="3"
            app:layout_row="2" />

    </android.support.v7.widget.GridLayout>

    <EditText
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="60dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:focusable="false"
        android:gravity="center_vertical|end"
        android:hint="请输入"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="358dp"
        android:layout_height="77dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:gravity="center_vertical|end"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</android.support.constraint.ConstraintLayout>